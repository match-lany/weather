{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/weather", "dest": "/api/weather.js" },
    { "src": "/api/cities", "dest": "/api/cities.js" },
    { "src": "/(.*)", "dest": "/src/$1" },
    { "src": "/", "dest": "/src/index.html" }
  ]
} 