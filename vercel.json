{
  "version": 2,
  "functions": {
    "src/api/routes/weatherRoutes.js": {
      "runtime": "nodejs18.x"
    },
    "src/api/routes/cityRoutes.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/weather/(.*)", "dest": "src/api/routes/weatherRoutes.js" },
    { "src": "/api/cities/(.*)", "dest": "src/api/routes/cityRoutes.js" },
    { "src": "/(.*)", "dest": "src/$1" },
    { "src": "/", "dest": "src/index.html" }
  ]
} 